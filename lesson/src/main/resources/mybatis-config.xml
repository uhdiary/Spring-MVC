		<typeAlias alias="faqboard" type="com.tong.lesson.faqboard.vo.FaqBoardVO"/>
	</typeAliases>


	<!-- Sql Mapper 설정 -->
	<mappers>
			<mapper resource="mappers/member-mapper.xml" />
		<mapper resource="mappers/teacher-mapper.xml" />
		<mapper resource="mappers/safepay-mapper.xml" />
		<mapper resource="mappers/suda-mapper.xml" />
		<mapper resource="mappers/student-mapper.xml" />
		<mapper resource="mappers/note-mapper.xml"/>
