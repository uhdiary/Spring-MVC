<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"   
                               "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- Alias 설정 -->
	<typeAliases>
<typeAlias alias="member" type="com.tong.lesson.member.vo.MemberVO" />
		<typeAlias alias="teacher" type="com.tong.lesson.teacher.vo.TeacherVO" />
